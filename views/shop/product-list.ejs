<main class="main-shop" id="main-collapse">


<div class="hero-full-wrapper">
  <h1 class="shop-headers">محصولات</h1>
  <div class="grid">
  
    <% if(products.length > 0) { %>
      <% for(let product of products) { %>
      <div class="grid-item">
        <img class="img-responsive centered" alt=<%= product.title %> src=<%= product.imageUrl %> >
        <a href="./products/<%= product._id %>" class="project-description">
          <div class="project-text-holder">
            <div class="project-text-inner">
              <h3> <%= product.title %> </h3>
              <h5>$<%= product.price %></h5>
              <form action="/add-to-cart" method="post">
                <input type="hidden" name="_csrf" value="<%= csrfToken %>">
                <input type="hidden" name="productId" value=<%= product._id %> />
                <button type="submit" class="btn btn-success">افزودن به سبد خرید</button>
              </form>
            </div>
          </div>
        </a>
      </div>
    <% } } else { %>
      <h2 class="shop-headers">متاسفانه محصولی موجود نیست</h2>
    <% } %>
